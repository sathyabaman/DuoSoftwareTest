<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/CTL_priority"
        android:layout_width="10dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="2dp"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/CTL_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/CTL_type"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/CTL_subject"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="2dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/CTL_ticketid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/CTL_priority_text"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:text="TextView"
        android:textAlignment="textEnd" />

    <TextView
        android:id="@+id/CTL_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CTL_status"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@+id/CTL_priority"
        android:text="TextView"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/CTL_type"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/CTL_priority"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="5dp"
        android:layout_toEndOf="@+id/CTL_priority"
        android:text="TextView" />

    <TextView
        android:id="@+id/CTL_priority_text"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/CTL_type"
        android:layout_alignBottom="@+id/CTL_type"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="2dp"
        android:layout_marginRight="10dp"
        android:text="TextView"
        android:textAlignment="textEnd" />
</RelativeLayout>